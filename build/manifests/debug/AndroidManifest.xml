<!-- From: file:/D:/Code/Presto%20Recipes/PrestoCookbook/AndroidManifest.xml --><manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.bignis.prestocookbook">

    <!--  11 = HONEYCOMB -->
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- for obvious reasons -->

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.bignis.prestocookbook.DisplayRecipeActivity" android:parentActivityName="com.bignis.prestocookbook.RecipesListActivity">
            <!-- Parent activity meta-data to support 4.0 and lower
            mgn - http://developer.android.com/training/implementing-navigation/ancestral.html
             -->
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.bignis.prestocookbook.RecipesListActivity"/>
        </activity>
        <activity android:label="@string/title_activity_recipes_list" android:name="com.bignis.prestocookbook.RecipesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.bignis.prestocookbook.LoadRecipesActivity">

            <!-- "file" and "content" are crucial for Gmail to recognize it -->
            <!-- http://stackoverflow.com/questions/13431479/android-opening-gmail-attachment-with-my-app -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/zip" android:pathPattern=".*\\.zip" android:scheme="file"/>
                <data android:mimeType="application/zip" android:pathPattern=".*\\.zip" android:scheme="content"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
